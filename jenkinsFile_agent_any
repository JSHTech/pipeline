pipeline {
agent any
stages {
        stage('Build') {
            steps {
                echo 'Building..'
				sh '''
				       pwd
				       echo 'pwd executed'
				       ls -lrt build
				       bash build
				    '''
				
            }
        }
        stage('deploy') {
            steps {
                echo 'Deploying to TEST environment..'
				sh 'sudo chmod 777 build deploy test; ./deploy'
            }
        }
        stage('test') {
            steps {
                echo 'Testing....'
				sh 'sudo chmod 777 build deploy test; ./test'
					}
				}
    }
}
